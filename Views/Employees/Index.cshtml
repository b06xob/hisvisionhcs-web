@{
    ViewData["Title"] = "Employee Forms";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - His Vision Healthcare Services</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #8040C0;
            --primary-dark: #5A2D8A;
            --primary-light: #A366D4;
        }
        .text-primary { color: var(--primary-color) !important; }
        .btn-primary { 
            background-color: var(--primary-color) !important; 
            border-color: var(--primary-color) !important; 
        }
        .btn-primary:hover { 
            background-color: var(--primary-dark) !important; 
            border-color: var(--primary-dark) !important; 
        }
        .btn-outline-primary { 
            color: var(--primary-color) !important; 
            border-color: var(--primary-color) !important; 
        }
        .btn-outline-primary:hover { 
            background-color: var(--primary-color) !important; 
            border-color: var(--primary-color) !important; 
            color: white !important;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <div class="text-center mb-5">
                    <h1 class="display-4 fw-bold text-primary">Employee Forms</h1>
                    <p class="lead">Select a form to complete</p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="list-group">
                    @foreach (var form in Model)
                    {
                        <a href="@Url.Action(form.Action)" class="list-group-item list-group-item-action d-flex align-items-center p-4">
                            <div class="d-inline-flex align-items-center justify-content-center me-4" style="width: 60px; height: 60px; background-color: var(--primary-color); border-radius: 50%;">
                                <i class="@form.Icon text-white" style="font-size: 1.5rem;"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="mb-2 fw-bold text-primary">@form.Name</h5>
                                <p class="mb-0 text-muted">@form.Description</p>
                            </div>
                            <div class="ms-3">
                                <i class="fas fa-chevron-right text-primary"></i>
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <div class="card border-0 bg-light">
                    <div class="card-body p-4 text-center">
                        <h5 class="fw-bold text-primary mb-3">Form Management</h5>
                        <div class="d-flex gap-3 justify-content-center flex-wrap">
                            <a href="@Url.Action("CommunityEngagementList")" class="btn btn-outline-primary">
                                <i class="fas fa-list me-2"></i>View Submitted Forms
                            </a>
                            <a href="@Url.Action("CommunityEngagement")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>New Community Engagement Form
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>