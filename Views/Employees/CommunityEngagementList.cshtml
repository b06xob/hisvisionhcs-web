@model IEnumerable<HisVisionHCS.Web.Models.CommunityEngagement>
@{
    ViewData["Title"] = "Community Engagement Forms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <div>
                    <h1 class="display-4 fw-bold text-primary">Community Engagement Forms</h1>
                    <p class="lead">View and manage submitted community engagement forms</p>
                </div>
                <div>
                    <a href="@Url.Action("CommunityEngagement")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>New Form
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Forms
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th>Date</th>
                                        <th>Member Name</th>
                                        <th>Member ID</th>
                                        <th>Staff Name</th>
                                        <th>Activity</th>
                                        <th>Location</th>
                                        <th>Duration</th>
                                        <th>Follow-up Required</th>
                                        <th>Supervisor Review</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var engagement in Model)
                                    {
                                        <tr>
                                            <td>@engagement.Date.ToString("MM/dd/yyyy")</td>
                                            <td>@engagement.MemberName</td>
                                            <td>@engagement.MemberId</td>
                                            <td>@engagement.StaffName</td>
                                            <td>@(engagement.CommunityActivity ?? "N/A")</td>
                                            <td>@(engagement.Location ?? "N/A")</td>
                                            <td>@(engagement.DurationHours?.ToString("0.0") ?? "N/A") hrs</td>
                                            <td>
                                                @if (engagement.FollowUpRequired)
                                                {
                                                    <span class="badge bg-warning">Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">No</span>
                                                }
                                            </td>
                                            <td>
                                                @if (engagement.SupervisorReview)
                                                {
                                                    <span class="badge bg-success">Reviewed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pending</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("CommunityEngagementDetails", new { id = engagement.Id })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5 text-center">
                        <i class="fas fa-clipboard-list text-muted" style="font-size: 4rem;"></i>
                        <h4 class="text-muted mt-3">No Forms Submitted Yet</h4>
                        <p class="text-muted">Start by creating your first community engagement form.</p>
                        <a href="@Url.Action("CommunityEngagement")" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Create First Form
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
