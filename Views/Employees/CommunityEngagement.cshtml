@model HisVisionHCS.Web.Models.CommunityEngagement
@{
    ViewData["Title"] = "Member Weekly Community Engagement Document";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - His Vision Healthcare Services</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary">Member Weekly Community Engagement Document</h1>
                <p class="lead">Complete the form below to document member community engagement activities</p>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="CommunityEngagement" method="post" class="needs-validation" novalidate>
        <div class="row g-4">
            <!-- Member Information -->
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-user me-2"></i>Member Information</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="MemberName" class="form-label"></label>
                                <input asp-for="MemberName" class="form-control" required />
                                <span asp-validation-for="MemberName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MemberId" class="form-label"></label>
                                <input asp-for="MemberId" class="form-control" required />
                                <span asp-validation-for="MemberId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Date" class="form-label"></label>
                                <input asp-for="Date" class="form-control" type="date" required />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Staff Information -->
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-user-tie me-2"></i>Staff Information</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="StaffName" class="form-label"></label>
                                <input asp-for="StaffName" class="form-control" required />
                                <span asp-validation-for="StaffName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="StaffId" class="form-label"></label>
                                <input asp-for="StaffId" class="form-control" required />
                                <span asp-validation-for="StaffId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Activity Information -->
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-calendar-check me-2"></i>Activity Information</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="CommunityActivity" class="form-label"></label>
                                <input asp-for="CommunityActivity" class="form-control" />
                                <span asp-validation-for="CommunityActivity" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Location" class="form-label"></label>
                                <input asp-for="Location" class="form-control" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DurationHours" class="form-label"></label>
                                <input asp-for="DurationHours" class="form-control" type="number" step="0.5" min="0" max="24" />
                                <span asp-validation-for="DurationHours" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Participants" class="form-label"></label>
                                <input asp-for="Participants" class="form-control" />
                                <span asp-validation-for="Participants" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="ActivityDescription" class="form-label"></label>
                                <textarea asp-for="ActivityDescription" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="ActivityDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Engagement Details -->
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-heart me-2"></i>Engagement Details</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="MemberResponse" class="form-label"></label>
                                <textarea asp-for="MemberResponse" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="MemberResponse" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Observations" class="form-label"></label>
                                <textarea asp-for="Observations" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Observations" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="GoalsAchieved" class="form-label"></label>
                                <textarea asp-for="GoalsAchieved" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="GoalsAchieved" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Follow-up Information -->
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Follow-up Information</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-check">
                                    <input asp-for="FollowUpRequired" class="form-check-input" type="checkbox" />
                                    <label asp-for="FollowUpRequired" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-12">
                                <label asp-for="FollowUpNotes" class="form-label"></label>
                                <textarea asp-for="FollowUpNotes" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="FollowUpNotes" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Signatures -->
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-signature me-2"></i>Signatures</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="StaffSignature" class="form-label"></label>
                                <input asp-for="StaffSignature" class="form-control" />
                                <span asp-validation-for="StaffSignature" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DateSigned" class="form-label"></label>
                                <input asp-for="DateSigned" class="form-control" type="date" />
                                <span asp-validation-for="DateSigned" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SupervisorName" class="form-label"></label>
                                <input asp-for="SupervisorName" class="form-control" />
                                <span asp-validation-for="SupervisorName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SupervisorSignature" class="form-label"></label>
                                <input asp-for="SupervisorSignature" class="form-control" />
                                <span asp-validation-for="SupervisorSignature" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SupervisorDate" class="form-label"></label>
                                <input asp-for="SupervisorDate" class="form-control" type="date" />
                                <span asp-validation-for="SupervisorDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mt-4">
                                    <input asp-for="SupervisorReview" class="form-check-input" type="checkbox" />
                                    <label asp-for="SupervisorReview" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Comments -->
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-comments me-2"></i>Additional Comments</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="AdditionalComments" class="form-label"></label>
                                <textarea asp-for="AdditionalComments" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="AdditionalComments" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="col-12">
                <div class="d-flex gap-3 justify-content-center">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>Submit Form
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Back to Forms
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
