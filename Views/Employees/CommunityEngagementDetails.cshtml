@model HisVisionHCS.Web.Models.CommunityEngagement
@{
    ViewData["Title"] = "Community Engagement Form Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <div>
                    <h1 class="display-4 fw-bold text-primary">Community Engagement Form Details</h1>
                    <p class="lead">Form submitted on @Model.CreatedAt.ToString("MM/dd/yyyy 'at' h:mm tt")</p>
                </div>
                <div>
                    <a href="@Url.Action("CommunityEngagementList")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Member Information -->
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Member Information</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <strong>Member Name:</strong><br>
                            <span class="text-muted">@Model.MemberName</span>
                        </div>
                        <div class="col-md-4">
                            <strong>Member ID:</strong><br>
                            <span class="text-muted">@Model.MemberId</span>
                        </div>
                        <div class="col-md-4">
                            <strong>Date:</strong><br>
                            <span class="text-muted">@Model.Date.ToString("MM/dd/yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Staff Information -->
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user-tie me-2"></i>Staff Information</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <strong>Staff Name:</strong><br>
                            <span class="text-muted">@Model.StaffName</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Staff ID:</strong><br>
                            <span class="text-muted">@Model.StaffId</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activity Information -->
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-check me-2"></i>Activity Information</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <strong>Community Activity:</strong><br>
                            <span class="text-muted">@(Model.CommunityActivity ?? "Not specified")</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Location:</strong><br>
                            <span class="text-muted">@(Model.Location ?? "Not specified")</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Duration:</strong><br>
                            <span class="text-muted">@(Model.DurationHours?.ToString("0.0") ?? "Not specified") hours</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Participants:</strong><br>
                            <span class="text-muted">@(Model.Participants ?? "Not specified")</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.ActivityDescription))
                        {
                            <div class="col-12">
                                <strong>Activity Description:</strong><br>
                                <span class="text-muted">@Model.ActivityDescription</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Engagement Details -->
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-heart me-2"></i>Engagement Details</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        @if (!string.IsNullOrEmpty(Model.MemberResponse))
                        {
                            <div class="col-12">
                                <strong>Member's Response/Engagement:</strong><br>
                                <span class="text-muted">@Model.MemberResponse</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Observations))
                        {
                            <div class="col-12">
                                <strong>Observations:</strong><br>
                                <span class="text-muted">@Model.Observations</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.GoalsAchieved))
                        {
                            <div class="col-12">
                                <strong>Goals Achieved:</strong><br>
                                <span class="text-muted">@Model.GoalsAchieved</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Follow-up Information -->
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Follow-up Information</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <strong>Follow-up Required:</strong><br>
                            @if (Model.FollowUpRequired)
                            {
                                <span class="badge bg-warning">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-success">No</span>
                            }
                        </div>
                        @if (!string.IsNullOrEmpty(Model.FollowUpNotes))
                        {
                            <div class="col-12">
                                <strong>Follow-up Notes:</strong><br>
                                <span class="text-muted">@Model.FollowUpNotes</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Signatures -->
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-signature me-2"></i>Signatures</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <strong>Staff Signature:</strong><br>
                            <span class="text-muted">@(Model.StaffSignature ?? "Not provided")</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Date Signed:</strong><br>
                            <span class="text-muted">@(Model.DateSigned?.ToString("MM/dd/yyyy") ?? "Not provided")</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Supervisor Name:</strong><br>
                            <span class="text-muted">@(Model.SupervisorName ?? "Not provided")</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Supervisor Signature:</strong><br>
                            <span class="text-muted">@(Model.SupervisorSignature ?? "Not provided")</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Supervisor Date:</strong><br>
                            <span class="text-muted">@(Model.SupervisorDate?.ToString("MM/dd/yyyy") ?? "Not provided")</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Supervisor Review:</strong><br>
                            @if (Model.SupervisorReview)
                            {
                                <span class="badge bg-success">Reviewed</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pending</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Comments -->
        @if (!string.IsNullOrEmpty(Model.AdditionalComments))
        {
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-comments me-2"></i>Additional Comments</h5>
                    </div>
                    <div class="card-body p-4">
                        <span class="text-muted">@Model.AdditionalComments</span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
