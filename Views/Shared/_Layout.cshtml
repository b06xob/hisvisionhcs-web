<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - His Vision Healthcare Services</title>
    <meta name="description" content="Providing attentive, personalized care for your elder or infirmed loved ones in Decatur, Georgia." />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HisVisionHCS.Web.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-heart-pulse me-2"></i>His Vision Healthcare Services
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                    <div class="navbar-collapse collapse d-lg-inline-flex justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Services">Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Careers">Careers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Referral">Referral</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>
                        </ul>
                    </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

        <footer class="bg-primary text-white py-5 mt-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5 class="fw-bold mb-3">His Vision Home Health</h5>
                        <p class="mb-2">Where caring hearts meet community needs—delivering compassionate, person-centered services that enhance quality of life and uphold dignity in every home we serve.</p>
                        <p class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>4153 Flat Shoals Pkwy, Building C, Suite 312A<br>Decatur, GA 30034</p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="fw-bold mb-3">Contact Information</h6>
                        <p class="mb-2"><i class="fas fa-phone me-2"></i><a href="tel:4705588761" class="text-white text-decoration-none">470.558.8761</a> (Office)</p>
                        <p class="mb-2"><i class="fas fa-phone-alt me-2"></i><a href="tel:4705894177" class="text-white text-decoration-none">470.589.4177</a> (After Hours/Emergency)</p>
                        <p class="mb-2"><i class="fas fa-phone-alt me-2"></i><a href="tel:4705894173" class="text-white text-decoration-none">470.589.4173</a> (After Hours/Emergency)</p>
                        <p class="mb-0"><i class="fas fa-envelope me-2"></i><a href="mailto:hisvisionhh@gmail.com" class="text-white text-decoration-none">hisvisionhh@gmail.com</a></p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="fw-bold mb-3">Office Hours</h6>
                        <p class="mb-2">Monday - Friday: 8:30 AM - 4:30 PM</p>
                        <p class="mb-2">Saturday - Sunday: Closed</p>
                        <div class="mt-3">
                            <a href="/Home/Referral" class="btn btn-outline-light btn-sm me-2">Refer a Client</a>
                            <a href="/Home/Careers" class="btn btn-outline-light btn-sm">Join Our Team</a>
                        </div>
                    </div>
                </div>
                <hr class="my-4">
                <div class="row">
                    <div class="col-12 text-center">
                        <p class="mb-0">&copy; 2025 His Vision Home Health. All rights reserved. | Licensed by Georgia Department of Community Health</p>
                    </div>
                </div>
            </div>
        </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/forms.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
