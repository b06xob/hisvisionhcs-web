@{
    ViewData["Title"] = "Community Engagement Form";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - His Vision Healthcare Services</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #8040C0;
            --primary-dark: #5A2D8A;
        }
        .text-primary { color: var(--primary-color) !important; }
        .btn-primary { 
            background-color: var(--primary-color) !important; 
            border-color: var(--primary-color) !important; 
        }
        .btn-primary:hover { 
            background-color: var(--primary-dark) !important; 
            border-color: var(--primary-dark) !important; 
        }
        .btn-outline-primary { 
            color: var(--primary-color) !important; 
            border-color: var(--primary-color) !important; 
        }
        .btn-outline-primary:hover { 
            background-color: var(--primary-color) !important; 
            border-color: var(--primary-color) !important; 
            color: white !important;
        }
        .btn-outline-secondary {
            color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }
        .btn-outline-secondary:hover {
            background-color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
            color: white !important;
        }
        .form-control:focus {
            border-color: var(--primary-color) !important;
            box-shadow: 0 0 0 0.2rem rgba(128, 64, 192, 0.25) !important;
        }
        .form-check-input:checked {
            background-color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
        }
        .form-check-input:focus {
            border-color: var(--primary-color) !important;
            box-shadow: 0 0 0 0.2rem rgba(128, 64, 192, 0.25) !important;
        }
        .navbar-brand img { height: 40px; }
        .navbar-nav .nav-link { color: white !important; font-weight: 500; }
        .navbar-nav .nav-link:hover { color: #f8f9fa !important; }
        .navbar-nav .nav-link.active { color: #f8f9fa !important; font-weight: 600; }
        .navbar-nav .nav-link.disabled { color: #ccc !important; cursor: not-allowed; }
        .navbar-nav .nav-link.disabled:hover { color: #ccc !important; }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: var(--primary-color);">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/logo/HisVision_Logo.png" alt="His Vision Healthcare Services" class="me-2">
                <span class="fw-bold">His Vision Healthcare Services</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto me-3">
                    <li class="nav-item">
                        <a class="nav-link" href="/">‚Üê Back to Main Site</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/employees">Forms</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Calendar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Scheduling</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <a href="#" class="btn btn-outline-light btn-sm disabled" aria-disabled="true">
                        <i class="fas fa-sign-in-alt me-1"></i>Login
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <div class="text-center mb-5">
                    <h1 class="display-4 fw-bold text-primary">Community Engagement Form</h1>
                    <p class="lead">Complete the form below to document member community engagement activities</p>
                </div>

                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Note:</strong> This is a preview of the Community Engagement form. Form submission is currently disabled for deployment testing.
                </div>

                <form action="#" method="post" class="needs-validation" novalidate>
                    <!-- Member Information -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="mb-0 fw-bold">Member Information</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="MemberName" class="form-label">Member Name *</label>
                                    <input type="text" id="MemberName" name="MemberName" class="form-control" required />
                                </div>
                                <div class="col-md-6">
                                    <label for="MemberId" class="form-label">Member ID *</label>
                                    <input type="text" id="MemberId" name="MemberId" class="form-control" required />
                                </div>
                                <div class="col-md-6">
                                    <label for="Date" class="form-label">Date of Engagement *</label>
                                    <input type="date" id="Date" name="Date" class="form-control" required />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Staff Information -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="mb-0 fw-bold">Staff Information</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="StaffName" class="form-label">Staff Name *</label>
                                    <input type="text" id="StaffName" name="StaffName" class="form-control" required />
                                </div>
                                <div class="col-md-6">
                                    <label for="StaffId" class="form-label">Staff ID *</label>
                                    <input type="text" id="StaffId" name="StaffId" class="form-control" required />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Activity Information -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="mb-0 fw-bold">Activity Information</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="CommunityActivity" class="form-label">Community Activity</label>
                                    <input type="text" id="CommunityActivity" name="CommunityActivity" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label for="Location" class="form-label">Location</label>
                                    <input type="text" id="Location" name="Location" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label for="DurationHours" class="form-label">Duration (Hours)</label>
                                    <input type="number" id="DurationHours" name="DurationHours" step="0.1" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label for="Participants" class="form-label">Participants</label>
                                    <input type="text" id="Participants" name="Participants" class="form-control" />
                                </div>
                                <div class="col-12">
                                    <label for="ActivityDescription" class="form-label">Activity Description</label>
                                    <textarea id="ActivityDescription" name="ActivityDescription" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Engagement Details -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="mb-0 fw-bold">Engagement Details</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="MemberResponse" class="form-label">Member's Response/Engagement</label>
                                    <textarea id="MemberResponse" name="MemberResponse" class="form-control" rows="3"></textarea>
                                </div>
                                <div class="col-12">
                                    <label for="Observations" class="form-label">Observations</label>
                                    <textarea id="Observations" name="Observations" class="form-control" rows="3"></textarea>
                                </div>
                                <div class="col-12">
                                    <label for="GoalsAchieved" class="form-label">Goals Achieved</label>
                                    <textarea id="GoalsAchieved" name="GoalsAchieved" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Follow-up Information -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="mb-0 fw-bold">Follow-up Information</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="form-check mb-3">
                                <input type="checkbox" id="FollowUpRequired" name="FollowUpRequired" class="form-check-input" />
                                <label for="FollowUpRequired" class="form-check-label">Follow-up Required</label>
                            </div>
                            <div class="col-12">
                                <label for="FollowUpNotes" class="form-label">Follow-up Notes</label>
                                <textarea id="FollowUpNotes" name="FollowUpNotes" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Signatures & Review -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white py-3">
                            <h5 class="mb-0 fw-bold">Signatures & Review</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="StaffSignature" class="form-label">Staff Signature</label>
                                    <input type="text" id="StaffSignature" name="StaffSignature" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label for="DateSigned" class="form-label">Date Signed</label>
                                    <input type="date" id="DateSigned" name="DateSigned" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label for="SupervisorName" class="form-label">Supervisor Name</label>
                                    <input type="text" id="SupervisorName" name="SupervisorName" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label for="SupervisorSignature" class="form-label">Supervisor Signature</label>
                                    <input type="text" id="SupervisorSignature" name="SupervisorSignature" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label for="SupervisorDate" class="form-label">Supervisor Review Date</label>
                                    <input type="date" id="SupervisorDate" name="SupervisorDate" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check mt-4">
                                        <input type="checkbox" id="SupervisorReview" name="SupervisorReview" class="form-check-input" />
                                        <label for="SupervisorReview" class="form-check-label">Supervisor Review Completed</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label for="AdditionalComments" class="form-label">Additional Comments</label>
                                    <textarea id="AdditionalComments" name="AdditionalComments" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="/employees" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Forms
                        </a>
                        <button type="button" class="btn btn-primary" onclick="alert('Form submission is currently disabled for deployment testing.')">
                            <i class="fas fa-save me-2"></i>Submit Engagement
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</body>
</html>