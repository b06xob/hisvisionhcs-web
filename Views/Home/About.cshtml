@{
    ViewData["Title"] = "About Us";
}

<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-4">About His Vision Healthcare Services</h1>
                <p class="lead mb-4">Understanding the difficult decisions families face when caring for elderly or infirmed loved ones.</p>
            </div>
        </div>
    </div>
</section>

<!-- Mission Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="text-center mb-5">
                    <h2 class="display-5 fw-bold text-primary mb-4">Our Mission</h2>
                    <p class="lead">Finding a caregiver can be an overwhelming task, and His Vision Healthcare Services understands the difficult decisions you are facing right now. The comfort of your loved one is our top priority, so we take extra care to make sure that not only are their needs met, but yours as well.</p>
                </div>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="text-center mb-3">
                            <i class="fas fa-heart text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="card-title text-center fw-bold text-primary">Compassionate Care</h4>
                        <p class="card-text text-center">We approach every client with empathy and understanding, recognizing that each family's situation is unique.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="text-center mb-3">
                            <i class="fas fa-users text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="card-title text-center fw-bold text-primary">Family-Centered</h4>
                        <p class="card-text text-center">We work closely with families to ensure everyone's needs are met throughout the care process.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Values Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold text-primary">Our Values</h2>
                <p class="lead">The principles that guide everything we do</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-hand-holding-heart text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="fw-bold">Dignity</h5>
                    <p>We treat every individual with the utmost respect and dignity, preserving their sense of self-worth.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-shield-alt text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="fw-bold">Safety</h5>
                    <p>Your loved one's safety and well-being are our highest priorities in all care decisions.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-star text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h5 class="fw-bold">Excellence</h5>
                    <p>We strive for excellence in every aspect of care, continuously improving our services.</p>
                </div>
            </div>
        </div>
    </div>
</section>

