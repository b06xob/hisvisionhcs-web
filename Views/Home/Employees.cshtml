@{
    ViewData["Title"] = "Employee Forms";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Forms - His Vision Healthcare Services</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #8040C0;
            --primary-dark: #5A2D8A;
        }
        .text-primary { color: var(--primary-color) !important; }
        .navbar-brand img { height: 40px; }
        .navbar-nav .nav-link { color: white !important; font-weight: 500; }
        .navbar-nav .nav-link:hover { color: #f8f9fa !important; }
        .navbar-nav .nav-link.active { color: #f8f9fa !important; font-weight: 600; }
        .navbar-nav .nav-link.disabled { color: #ccc !important; cursor: not-allowed; }
        .navbar-nav .nav-link.disabled:hover { color: #ccc !important; }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: var(--primary-color);">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/logo/HisVision_Logo.png" alt="His Vision Healthcare Services" class="me-2">
                <span class="fw-bold">His Vision Healthcare Services</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto me-3">
                    <li class="nav-item">
                        <a class="nav-link" href="/">‚Üê Back to Main Site</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/employees">Forms</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Calendar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Scheduling</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <a href="#" class="btn btn-outline-light btn-sm disabled" aria-disabled="true">
                        <i class="fas fa-sign-in-alt me-1"></i>Login
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <div class="mb-5">
                    <div class="d-flex align-items-center justify-content-start mb-3">
                        <img src="~/images/logo/HisVision_Logo.png" alt="His Vision Healthcare Services" style="height: 120px;" class="me-4">
                        <div class="flex-grow-1 text-center">
                            <h1 class="display-4 fw-bold text-primary mb-0">Employee Forms</h1>
                            <p class="lead mb-0">Select a form to complete</p>
                        </div>
                    </div>
                </div>

                <!-- Forms Cards -->
                <div class="row g-4">
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <div class="d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px; background-color: var(--primary-color); border-radius: 50%;">
                                        <i class="fas fa-users text-white" style="font-size: 1.5rem;"></i>
                                    </div>
                                </div>
                                <h5 class="card-title fw-bold text-primary mb-3">Community Engagement</h5>
                                <p class="card-text text-muted mb-4">Track member community engagement activities and outcomes</p>
                                <div class="alert alert-info mb-0" role="alert">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <small>Form coming soon</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body text-center p-4">
                                <div class="mb-3">
                                    <div class="d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px; background-color: var(--primary-color); border-radius: 50%;">
                                        <i class="fas fa-exclamation-triangle text-white" style="font-size: 1.5rem;"></i>
                                    </div>
                                </div>
                                <h5 class="card-title fw-bold text-primary mb-3">Incident Reports</h5>
                                <p class="card-text text-muted mb-4">Report and document workplace incidents and safety concerns</p>
                                <div class="alert alert-info mb-0" role="alert">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <small>Form coming soon</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
