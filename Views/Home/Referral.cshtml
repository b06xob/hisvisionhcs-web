@{
    ViewData["Title"] = "Referral";
}

<!-- Hero Section -->
<section class="bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold mb-4">Client Referral</h1>
                <p class="lead">Help us connect individuals with the compassionate care they need</p>
            </div>
        </div>
    </div>
</section>

<!-- Eligibility Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold text-primary">Eligibility Summary</h2>
                <p class="lead">Who can benefit from our home health services</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="text-center mb-3">
                            <i class="fas fa-user-plus text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="card-title fw-bold text-primary text-center">Adults with Disabilities</h4>
                        <p class="card-text text-center">Individuals with physical, developmental, or intellectual disabilities who need support to live independently in their homes.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="text-center mb-3">
                            <i class="fas fa-user-clock text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="card-title fw-bold text-primary text-center">Seniors Needing Support</h4>
                        <p class="card-text text-center">Elderly adults who require assistance with daily living activities to maintain their independence and quality of life.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="text-center mb-3">
                            <i class="fas fa-file-medical text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="card-title fw-bold text-primary text-center">Chronic Condition Management</h4>
                        <p class="card-text text-center">Individuals managing chronic health conditions who benefit from ongoing support and monitoring in their home environment.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="text-center mb-3">
                            <i class="fas fa-handshake text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="card-title fw-bold text-primary text-center">Medicaid Waiver Participants</h4>
                        <p class="card-text text-center">Individuals enrolled in Georgia's Medicaid waiver programs who are approved for home and community-based services.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Waiver Programs -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold text-primary">Waivers Accepted</h2>
                <p class="lead">We accept multiple Medicaid waiver programs</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm text-center">
                    <div class="card-body p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-heart text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="card-title fw-bold text-primary">SOURCE</h5>
                        <p class="card-text small">Service Options Using Resources in a Community Environment</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm text-center">
                    <div class="card-body p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-users text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="card-title fw-bold text-primary">CCSP</h5>
                        <p class="card-text small">Community Care Services Program</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm text-center">
                    <div class="card-body p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-wheelchair text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="card-title fw-bold text-primary">ICWP</h5>
                        <p class="card-text small">Independent Care Waiver Program</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm text-center">
                    <div class="card-body p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-home text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="card-title fw-bold text-primary">SFC</h5>
                        <p class="card-text small">Service Facilitation and Coordination</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 bg-primary bg-opacity-10">
                    <div class="card-body p-4 text-center">
                        <h5 class="fw-bold text-primary mb-3">Private Pay Services Available</h5>
                        <p class="mb-0">We also provide services for private pay clients who may not qualify for Medicaid waivers but need quality home health care.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Referral Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="text-center mb-5">
                    <h2 class="display-5 fw-bold text-primary">Referral Form</h2>
                    <p class="lead">Please provide the following information to help us connect the individual with appropriate services</p>
                </div>
                
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <form id="referralForm" method="post" action="/Forms/SubmitReferral">
                            @Html.AntiForgeryToken()
                            <!-- Client Information -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="fw-bold text-primary mb-3">Client Information</h5>
                                </div>
                            </div>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label for="clientFirstName" class="form-label">First Name *</label>
                                    <input type="text" class="form-control" id="clientFirstName" name="ClientFirstName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="clientLastName" class="form-label">Last Name *</label>
                                    <input type="text" class="form-control" id="clientLastName" name="ClientLastName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="clientPhone" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" id="clientPhone" name="ClientPhone">
                                </div>
                                <div class="col-md-6">
                                    <label for="clientEmail" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="clientEmail" name="ClientEmail">
                                </div>
                                <div class="col-12">
                                    <label for="clientAddress" class="form-label">Address</label>
                                    <textarea class="form-control" id="clientAddress" name="ClientAddress" rows="2"></textarea>
                                </div>
                            </div>

                            <!-- Referrer Information -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="fw-bold text-primary mb-3">Referrer Information</h5>
                                </div>
                            </div>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label for="referrerName" class="form-label">Your Name *</label>
                                    <input type="text" class="form-control" id="referrerName" name="ReferrerName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="referrerTitle" class="form-label">Title/Organization</label>
                                    <input type="text" class="form-control" id="referrerTitle" name="ReferrerTitle">
                                </div>
                                <div class="col-md-6">
                                    <label for="referrerPhone" class="form-label">Phone Number *</label>
                                    <input type="tel" class="form-control" id="referrerPhone" name="ReferrerPhone" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="referrerEmail" class="form-label">Email Address *</label>
                                    <input type="email" class="form-control" id="referrerEmail" name="ReferrerEmail" required>
                                </div>
                            </div>

                            <!-- Service Information -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="fw-bold text-primary mb-3">Service Information</h5>
                                </div>
                            </div>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label for="waiverType" class="form-label">Waiver Type</label>
                                    <select class="form-select" id="waiverType" name="WaiverType">
                                        <option value="">Select Waiver Type</option>
                                        <option value="SOURCE">SOURCE</option>
                                        <option value="CCSP">CCSP</option>
                                        <option value="ICWP">ICWP</option>
                                        <option value="SFC">SFC</option>
                                        <option value="Private Pay">Private Pay</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="serviceNeeds" class="form-label">Primary Service Needs</label>
                                    <select class="form-select" id="serviceNeeds" name="ServiceNeeds">
                                        <option value="">Select Service Type</option>
                                        <option value="Companion Sitter">Companion Sitter</option>
                                        <option value="CNA Services">CNA Services</option>
                                        <option value="Skilled Nursing">Skilled Nursing</option>
                                        <option value="Personalized Home Care">Personalized Home Care</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="additionalInfo" class="form-label">Additional Information</label>
                                    <textarea class="form-control" id="additionalInfo" name="AdditionalInfo" rows="4" placeholder="Please provide any additional details about the client's needs, medical conditions, or special requirements..."></textarea>
                                </div>
                            </div>

                            <!-- Captcha Section -->
                            <div class="row g-3 mb-4">
                                <div class="col-12">
                                    <div class="card border-primary">
                                        <div class="card-body p-3">
                                            <h6 class="card-title text-primary mb-3">
                                                <i class="fas fa-shield-alt me-2"></i>Security Verification
                                            </h6>
                                            <div class="row align-items-center">
                                                <div class="col-md-6">
                                                    <label for="referralCaptchaQuestion" class="form-label">Security Question *</label>
                                                    <div id="referralCaptchaQuestion" class="form-control-plaintext fw-bold text-primary"></div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label for="referralCaptchaAnswer" class="form-label">Your Answer *</label>
                                                    <input type="number" class="form-control" id="referralCaptchaAnswer" name="captchaAnswer" required>
                                                    <input type="hidden" id="referralCaptchaExpectedAnswer" name="captchaExpectedAnswer">
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="form-label">&nbsp;</label>
                                                    <button type="button" class="btn btn-outline-secondary d-block w-100" id="referralRefreshCaptcha" title="Get new question">
                                                        <i class="fas fa-sync-alt"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>Submit Referral
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

