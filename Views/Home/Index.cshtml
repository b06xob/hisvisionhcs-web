@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section with Slideshow - Full Width -->
<section class="hero-section bg-gradient-primary text-white py-5">
    <div class="container-fluid px-4">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Where Caring Hearts Meet Community Needs</h1>
                <p class="lead mb-4">His Vision Home Health delivers compassionate, person-centered services that enhance quality of life and uphold dignity in every home we serve. With over 20 years of combined experience, we specialize in serving elderly adults, individuals with disabilities, and those navigating chronic health conditions.</p>
                <div class="d-flex gap-3 flex-wrap">
                    <a href="#referral" class="btn btn-light btn-lg">
                        <i class="fas fa-user-plus me-2"></i>Refer a Member
                    </a>
                    <a href="/Home/Careers" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-briefcase me-2"></i>Apply Now
                    </a>
                    <a href="/Home/About" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-info-circle me-2"></i>Learn More
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image bg-white rounded-3 p-2 shadow-lg">
                    <div id="teamSlideshow" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/images/slideshow/team-photo-1.jpg" class="d-block w-100 rounded" alt="His Vision Healthcare Team" style="height: 500px; object-fit: cover;">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/slideshow/team-photo-2.jpg" class="d-block w-100 rounded" alt="His Vision Healthcare Team" style="height: 500px; object-fit: cover;">
                            </div>
                            <div class="carousel-item">
                                <img src="~/images/slideshow/team-photo-3.jpg" class="d-block w-100 rounded" alt="His Vision Healthcare Team" style="height: 500px; object-fit: cover;">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#teamSlideshow" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#teamSlideshow" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

