<!-- Contact Form -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="text-center mb-5">
                    <h2 class="display-5 fw-bold text-primary">Send Us a Message</h2>
                    <p class="lead">Have questions? We'd love to hear from you</p>
                </div>
                
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <form id="contactForm" method="post" action="/Forms/SubmitContactMessage">
                            @Html.AntiForgeryToken()
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label for="contactFirstName" class="form-label">First Name *</label>
                                    <input type="text" class="form-control" id="contactFirstName" name="FirstName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="contactLastName" class="form-label">Last Name *</label>
                                    <input type="text" class="form-control" id="contactLastName" name="LastName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="contactPhone" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" id="contactPhone" name="Phone">
                                </div>
                                <div class="col-md-6">
                                    <label for="contactEmail" class="form-label">Email Address *</label>
                                    <input type="email" class="form-control" id="contactEmail" name="Email" required>
                                </div>
                                <div class="col-12">
                                    <label for="contactSubject" class="form-label">Subject</label>
                                    <select class="form-select" id="contactSubject" name="Subject">
                                        <option value="">Select a topic</option>
                                        <option value="General Inquiry">General Inquiry</option>
                                        <option value="Service Information">Service Information</option>
                                        <option value="Referral">Referral</option>
                                        <option value="Career Opportunity">Career Opportunity</option>
                                        <option value="Billing Question">Billing Question</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="contactMessage" class="form-label">Message *</label>
                                    <textarea class="form-control" id="contactMessage" name="Message" rows="5" placeholder="Please provide details about your inquiry..." required></textarea>
                                </div>
                            </div>

                            <!-- Captcha Section -->
                            <div class="row g-3 mb-4">
                                <div class="col-12">
                                    <div class="card border-primary">
                                        <div class="card-body p-3">
                                            <h6 class="card-title text-primary mb-3">
                                                <i class="fas fa-shield-alt me-2"></i>Security Verification
                                            </h6>
                                            <div class="row align-items-center">
                                                <div class="col-md-6">
                                                    <label for="contactCaptchaQuestion" class="form-label">Security Question *</label>
                                                    <div id="contactCaptchaQuestion" class="form-control-plaintext fw-bold text-primary"></div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label for="contactCaptchaAnswer" class="form-label">Your Answer *</label>
                                                    <input type="number" class="form-control" id="contactCaptchaAnswer" name="captchaAnswer" required>
                                                    <input type="hidden" id="contactCaptchaExpectedAnswer" name="captchaExpectedAnswer">
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="form-label">&nbsp;</label>
                                                    <button type="button" class="btn btn-outline-secondary d-block w-100" id="contactRefreshCaptcha" title="Get new question">
                                                        <i class="fas fa-sync-alt"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>Send Message
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>