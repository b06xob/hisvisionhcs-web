</section>

<!-- Open Positions -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold text-primary">Open Positions</h2>
                <p class="lead">Join our team of compassionate caregivers</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h4 class="card-title fw-bold text-primary mb-3">Certified Nursing Assistants (CNAs)</h4>
                        <p class="card-text mb-3">Provide personal care and assistance with daily living activities for clients in their homes.</p>
                        <ul class="list-unstyled mb-4">
                            <li><i class="fas fa-check text-success me-2"></i>Valid CNA certification required</li>
                            <li><i class="fas fa-check text-success me-2"></i>Experience in home health preferred</li>
                            <li><i class="fas fa-check text-success me-2"></i>Compassionate and reliable</li>
                            <li><i class="fas fa-check text-success me-2"></i>Valid driver's license</li>
                        </ul>
                        <a href="#application" class="btn btn-primary">Apply Now</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h4 class="card-title fw-bold text-primary mb-3">Companion Sitters</h4>
                        <p class="card-text mb-3">Provide companionship, social engagement, and light assistance with daily activities.</p>
                        <ul class="list-unstyled mb-4">
                            <li><i class="fas fa-check text-success me-2"></i>High school diploma or equivalent</li>
                            <li><i class="fas fa-check text-success me-2"></i>Previous caregiving experience helpful</li>
                            <li><i class="fas fa-check text-success me-2"></i>Patient and understanding</li>
                            <li><i class="fas fa-check text-success me-2"></i>Reliable transportation</li>
                        </ul>
                        <a href="#application" class="btn btn-primary">Apply Now</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h4 class="card-title fw-bold text-primary mb-3">Registered Nurses (RNs)</h4>
                        <p class="card-text mb-3">Provide skilled nursing care, medication management, and health monitoring for clients with complex medical needs.</p>
                        <ul class="list-unstyled mb-4">
                            <li><i class="fas fa-check text-success me-2"></i>Valid RN license in Georgia</li>
                            <li><i class="fas fa-check text-success me-2"></i>Home health experience preferred</li>
                            <li><i class="fas fa-check text-success me-2"></i>Strong clinical skills</li>
                            <li><i class="fas fa-check text-success me-2"></i>Excellent communication skills</li>
                        </ul>
                        <a href="#application" class="btn btn-primary">Apply Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Application Form -->
<section id="application" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="text-center mb-5">
                    <h2 class="display-5 fw-bold text-primary">Application Form</h2>
                    <p class="lead">Ready to join our team? Complete the application below</p>
                </div>
                
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-5">
                        <form id="careerForm" method="post" action="/Forms/SubmitCareerApplication">
                            @Html.AntiForgeryToken()
                            <!-- Personal Information -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="fw-bold text-primary mb-3">Personal Information</h5>
                                </div>
                            </div>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label for="firstName" class="form-label">First Name *</label>
                                    <input type="text" class="form-control" id="firstName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="lastName" class="form-label">Last Name *</label>
                                    <input type="text" class="form-control" id="lastName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="phone" class="form-label">Phone Number *</label>
                                    <input type="tel" class="form-control" id="phone" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email Address *</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                                <div class="col-12">
                                    <label for="address" class="form-label">Address</label>
                                    <textarea class="form-control" id="address" rows="2"></textarea>
                                </div>
                            </div>

                            <!-- Position Information -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="fw-bold text-primary mb-3">Position Information</h5>
                                </div>
                            </div>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label for="position" class="form-label">Position of Interest *</label>
                                    <select class="form-select" id="position" required>
                                        <option value="">Select Position</option>
                                        <option value="CNA">Certified Nursing Assistant (CNA)</option>
                                        <option value="Companion Sitter">Companion Sitter</option>
                                        <option value="Registered Nurse">Registered Nurse (RN)</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="experience" class="form-label">Years of Experience</label>
                                    <select class="form-select" id="experience">
                                        <option value="">Select Experience Level</option>
                                        <option value="0-1">0-1 years</option>
                                        <option value="2-5">2-5 years</option>
                                        <option value="6-10">6-10 years</option>
                                        <option value="10+">10+ years</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="availability" class="form-label">Availability</label>
                                    <textarea class="form-control" id="availability" rows="3" placeholder="Please describe your availability (days, times, etc.)"></textarea>
                                </div>
                            </div>

                            <!-- Qualifications -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="fw-bold text-primary mb-3">Qualifications</h5>
                                </div>
                            </div>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label for="license" class="form-label">License/Certification Number</label>
                                    <input type="text" class="form-control" id="license" placeholder="If applicable">
                                </div>
                                <div class="col-md-6">
                                    <label for="licenseExpiry" class="form-label">License/Certification Expiry Date</label>
                                    <input type="date" class="form-control" id="licenseExpiry">
                                </div>
                                <div class="col-12">
                                    <label for="additionalSkills" class="form-label">Additional Skills or Qualifications</label>
                                    <textarea class="form-control" id="additionalSkills" rows="3" placeholder="Please list any additional skills, certifications, or qualifications you have..."></textarea>
                                </div>
                            </div>

                            <!-- Why Us -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="fw-bold text-primary mb-3">Why His Vision Home Health?</h5>
                                </div>
                            </div>
                            <div class="row g-3 mb-4">
                                <div class="col-12">
                                    <label for="motivation" class="form-label">What motivates you to work in home health care?</label>
                                    <textarea class="form-control" id="motivation" rows="4" placeholder="Tell us what drives your passion for helping others..."></textarea>
                                </div>
                            </div>

                            <!-- Captcha Section -->
                            <div class="row g-3 mb-4">
                                <div class="col-12">
                                    <div class="card border-primary">
                                        <div class="card-body p-3">
                                            <h6 class="card-title text-primary mb-3">
                                                <i class="fas fa-shield-alt me-2"></i>Security Verification
                                            </h6>
                                            <div class="row align-items-center">
                                                <div class="col-md-6">
                                                    <label for="careerCaptchaQuestion" class="form-label">Security Question *</label>
                                                    <div id="careerCaptchaQuestion" class="form-control-plaintext fw-bold text-primary"></div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label for="careerCaptchaAnswer" class="form-label">Your Answer *</label>
                                                    <input type="number" class="form-control" id="careerCaptchaAnswer" name="captchaAnswer" required>
                                                    <input type="hidden" id="careerCaptchaExpectedAnswer" name="captchaExpectedAnswer">
                                                </div>
                                                <div class="col-md-2">
                                                    <label class="form-label">&nbsp;</label>
                                                    <button type="button" class="btn btn-outline-secondary d-block w-100" id="careerRefreshCaptcha" title="Get new question">
                                                        <i class="fas fa-sync-alt"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>Submit Application
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

